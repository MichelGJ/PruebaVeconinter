@model VeconinterContacts.Models.SubCliente
@{
    ViewData["Title"] = "Editar Subcliente";
}

<div class="card shadow-sm border-0">
    <div class="card-header">
        <h5 class="m-0">Editar Subcliente</h5>
        <small class="text-muted">Cliente: @ViewBag.ClienteNombre</small>
    </div>

    <div class="card-body">
        <form id="editSubForm" asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />
            <input asp-for="ClienteId" type="hidden" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" required maxlength="100" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required maxlength="100" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" placeholder="Teléfono" required maxlength="11" />
                <span asp-validation-for="Telefono" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    Guardar cambios
                </button>

                <a class="btn btn-secondary"
                   asp-controller="Clientes"
                   asp-action="Details"
                   asp-route-id="@Model.ClienteId">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_FormLiveValidation"
             view-data='new ViewDataDictionary(ViewData) { { "FormSelector", "#editSubForm" } }' />
}
