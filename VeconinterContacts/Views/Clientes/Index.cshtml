@model IEnumerable<VeconinterContacts.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Clientes</h3>
    <a class="btn btn-success" asp-action="Create">Nuevo</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover align-middle m-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Empresa</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Nombre</td>
                        <td>@c.Email</td>
                        <td>@c.Telefono</td>
                        <td>@c.Empresa</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@c.Id">Detalles</a>
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@c.Id">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
