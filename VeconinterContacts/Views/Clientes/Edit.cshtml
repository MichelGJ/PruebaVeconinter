@model VeconinterContacts.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}
<div class="card">
    <div class="card-header">Editar Cliente</div>
    <div class="card-body">
        <form id="editClienteForm" asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.Partial("_Form", Model)
            <div class="d-flex gap-2">
                <button class="btn btn-primary">Actualizar</button>
                <a class="btn btn-secondary" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_FormLiveValidation"
             view-data='new ViewDataDictionary(ViewData) { { "FormSelector", "#editClienteForm" } }' />
}
